@{
    ViewData["Title"] = "Начало";
}

@section Styles {
    <style>
        .home-hero {
            background: linear-gradient(135deg, #e1bee7, #e3f2fd);
            padding: 60px;
            text-align: center;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            animation: slideInFade 0.8s ease-out;
        }

        .home-hero h1 {
            font-size: 3rem;
            font-weight: 600;
            color: #333;
        }

        .home-hero p {
            font-size: 1.25rem;
            color: #555;
        }

        .home-hero .btn {
            font-size: 1.2rem;
            padding: 12px 28px;
            border-radius: 8px;
            margin-top: 20px;
            transition: all 0.3s ease-in-out;
        }

        .home-hero .btn:hover {
            transform: scale(1.05);
        }

        .emoji {
            font-size: 2rem;
            margin-right: 10px;
            vertical-align: middle;
        }

        @@keyframes slideInFade {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

<div class="home-hero">
    <h1>
        <span class="emoji">✈️</span>
        Добре дошли във <strong>Vacation Manager</strong>!
    </h1>
    <p class="mt-3">
        Управлявайте отпуски, екипи, проекти и потребители с лекота.
    </p>
    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
        Към Таблото <i class="fas fa-arrow-right ms-2"></i>
    </a>
</div>
