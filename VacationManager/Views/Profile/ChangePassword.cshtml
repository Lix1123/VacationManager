@{
    ViewData["Title"] = "Смяна на парола";
}

<h2 class="mb-4">Смяна на парола</h2>

<form asp-action="ChangePassword" method="post">
    @Html.AntiForgeryToken()

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="mb-3">
        <label for="currentPassword" class="form-label">Текуща парола</label>
        <input name="currentPassword" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="newPassword" class="form-label">Нова парола</label>
        <input name="newPassword" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Потвърди новата парола</label>
        <input name="confirmPassword" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Запази</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
</form>
