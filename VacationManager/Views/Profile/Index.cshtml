@model VacationManager.Models.User

@{
    ViewData["Title"] = "Моят Профил";
}

@section Styles {
    <style>
        .profile-card {
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

<h2 class="mb-4">👤 Моят профил</h2>

<div class="card profile-card shadow-lg">
    <div class="card-body">
        <h4 class="card-title mb-3"><i class="fas fa-user-circle"></i> @Model.FirstName @Model.LastName</h4>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><strong>👤 Потребителско име:</strong> @Model.UserName</li>
            <li class="list-group-item"><strong>📧 Имейл:</strong> @Model.Email</li>
            <li class="list-group-item"><strong>🗓️ Оставащи дни отпуска:</strong> @Model.LeaveDaysRemaining</li>
        </ul>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Edit" class="btn btn-warning">
                <i class="fas fa-user-edit"></i> Редактирай профил
            </a>

            <a asp-action="ChangePassword" class="btn btn-primary">
                <i class="fas fa-key"></i> Смени парола
            </a>

            <a href="#" class="btn btn-secondary disabled" title="Скоро">
                🌐 Смени език
            </a>
        </div>
    </div>
</div>
