@model VacationManager.Models.Team

@{
    ViewData["Title"] = "Създай екип";
}

<h2 class="fade-in-up mb-4"><i class="fas fa-users text-primary me-2"></i>Създай нов екип</h2>

<form asp-action="Create" method="post" class="fade-in">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Лидер на екипа</label>
        <select asp-for="TeamLeadId" asp-items="ViewBag.Users" class="form-select">
            <option value="">-- Изберете лидер --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Проект</label>
        <select asp-for="ProjectId" asp-items="ViewBag.Projects" class="form-select">
            <option value="">-- Без проект --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Създай</button>
</form>

@section Scripts {
    <style>
        @@keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeInUp 0.4s ease-in-out both;
        }

        .fade-in-up {
            animation: fadeInUp 0.8s ease-in-out both;
        }
    </style>
}
