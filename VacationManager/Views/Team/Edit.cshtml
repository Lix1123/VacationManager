@model VacationManager.Models.Team

@{
    ViewData["Title"] = "Редакция на екип";
}

<h2 class="fade-in-up mb-4"><i class="fas fa-users-cog text-warning me-2"></i>Редактиране на екип</h2>

<form asp-action="Edit" method="post" class="fade-in">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Име на екипа</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Лидер на екипа</label>
        <select asp-for="TeamLeadId" asp-items="ViewBag.Users" class="form-select"></select>
    </div>

    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i> Запази</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Отказ</a>
</form>

@section Scripts {
<style>
    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeInUp 0.4s ease-in-out both;
    }

    .fade-in-up {
        animation: fadeInUp 0.8s ease-in-out both;
    }
</style>
}
