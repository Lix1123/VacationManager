@model IEnumerable<VacationManager.Models.Notification>

@if (!Model.Any())
{
    <div class="text-muted">Нямате нови известия.</div>
}
else
{
    <ul class="list-group">
        @foreach (var note in Model)
        {
            <li class="list-group-item">
                <strong>@note.Message</strong><br />
                <small>@note.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</small>
            </li>
        }
    </ul>
}
