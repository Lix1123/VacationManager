@model VacationManager.Models.User

@{
    ViewData["Title"] = "Редакция на потребител";
}

<h2 class="fade-in-up mb-4"><i class="fas fa-user-edit me-2 text-primary"></i>Редакция на потребител</h2>

<form asp-action="Edit" method="post" class="fade-in">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Потребителско име</label>
        <input asp-for="UserName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Имейл</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <button type="submit" class="btn btn-primary me-2">
        <i class="fas fa-save me-1"></i> Запази промените
    </button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>

@section Scripts {
    <style>
        @@keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeInUp 0.4s ease-in-out both;
        }

        .fade-in-up {
            animation: fadeInUp 0.8s ease-in-out both;
        }
    </style>
}
